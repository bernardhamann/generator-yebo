@import 'nib'
@import 'jeet'
@import 'rupture'

// Set the Breakpoints
bp = 960px

// Set the Colors
grey = #535d65
grey-light = #9db2b8
pink = #ed2a7a
purple = #662c91

// Set the fonts later use // font-family font1

font1 = 'Asap', sans-serif
font2 = 'Anton', sans-serif
font3 = 'Holtwood One SC', serif

// The global styles

html
 font-size: 1em
 color: grey
 font-family font1

body
  background: white
  padding 0px
  margin 0px
a
  color: #00B7FF

a:hover
color purple


.f1
    font-family font1
.f2
    font-family font2
.f3
    font-family font3




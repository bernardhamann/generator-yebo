// the container is used to center the content on the page. If you dont want the content to be centered dont use a container
.container
  center(bp)
  background green

// Use rows to wrap around columns and spans
.row
  width 100%
  cf()

// Use col inners if you want to add padding, margins and borders to columns and span without breaking the proportions

col-inner {
    padding 10px
    border-radius: 1px
}


// Section to group the content of the page

section
    padding-top 100px
    padding-bottom 100px

// Buttons

.btn-pink
  padding-top 15px
  padding-bottom 15px
  padding-left 30px
  padding-right 30px
  background pink
  border-radius: 3px
  font-size 2em
  a
      text-decoration none
      color white
  a:hover
      color purple

.square-list
  list-style-type: square;

.resposive-image
  max-width 100%

